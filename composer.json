{
	"name": "phpgt/async",
	"description": "Promise-based non-blocking operations.",
	"license": "MIT",

	"require": {
		"php": ">=7.4",
		"ext-dom": "*",
		"phpgt/promise": "^2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "9.*",
		"phpstan/phpstan": "^0.12"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Async\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Async\\Test\\": "./test/phpunit"
		}
	},

	"keywords": [
		"async",
		"asynchronous",
		"concurrent",
		"concurrency",
		"parallel",
		"loop",
		"event",
		"timer"
	],


	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
